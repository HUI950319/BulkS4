Package: BulkS4
Type: Package
Title: S4 Classes and Methods for Bulk RNA-seq Data Analysis
Version: 0.1.0.9000
Authors@R: c(
    person(
      "Jane", "Doe",
      email = "jane@example.com",
      role = c("aut", "cre")
    )
